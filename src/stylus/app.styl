#contents
  margin 10px
  width calc(100% - 20px)

  .block
    display inline-block
    width calc(100% / 5)
    mix-height 200px
    background-position center bottom
    background-repeat no-repeat
    background-size contain
    margin-bottom 10px

    img,
    video
      width 100%

    &.add
      width calc((100% / 5) - 8px)
      height calc(100% - 8px)
      border 4px solid #ccc
      margin -4px
      border-radius: 10px

      img,
      video
        margin 10% 20%
        width 60%

  input[type="file"]
    display none
